<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin.default">

    <TextView
        android:id="@+id/field.description"
        style="@style/labelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin.default"
        tools:text="@string/dummy.short"/>

    <LinearLayout
        android:id="@+id/field.base.container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/field.error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/text.error"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="@string/dummy.short"
        tools:visibility="visible"/>

</LinearLayout>