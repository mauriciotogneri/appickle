<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="app_theme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorSecondary">@color/accent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/button.text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="editText">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/hint</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="textInput">
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="checkbox">
        <item name="android:textColor">@color/text.default</item>
    </style>

</resources>
